<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    >

    <TextView
        android:id="@+id/alpha_userim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3e3e3"
        android:padding="2dp"
        android:textSize="18sp"
        android:textColor="@color/guide_color" 
        />

    <ImageView
        android:id="@+id/img_friend_avatar_userim"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/alpha_userim"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6.0dip"
        android:padding="5dp"
        android:src="@drawable/head" />

    <TextView
        android:id="@+id/tv_friend_name_userim"
        style="@style/Smile.TextView._Black"
        android:layout_alignTop="@id/img_friend_avatar_userim"
        android:layout_below="@id/alpha_userim"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6.0dip"
        android:layout_toRightOf="@id/img_friend_avatar_userim"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="20sp" />

</RelativeLayout>