<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/xxhpintu_game_dir"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="时间"
            android:textColor="#ffffffff"
            android:textSize="30sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/xxhpintu_game_dir"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/url_info_a"
            android:layout_width="190dp"
            android:layout_height="38dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:layout_weight="5.0"
            android:background="#ffffffff"
            android:text="www.baidu.com"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/xxh_imagebntdo_a"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1.0"
            android:background="#ffffffff"
            android:src="@drawable/game_bar" />

        <ImageButton
            android:id="@+id/btn_save_a"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="190dp"
            android:layout_weight="1.0"
            android:background="@drawable/xxhpintu_game_bkimgbnt"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/game_bar_02" />

        <ImageButton
            android:id="@+id/btn_sendgame_a"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="225dp"
            android:layout_weight="1.0"
            android:background="@drawable/xxhpintu_game_bkimgbnt"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/game_bar_04" />

        <ImageButton
            android:id="@+id/btn_personial_a"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="275dp"
            android:layout_weight="1.0"
            android:background="@drawable/xxhpintu_game_bkimgbnt"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/game_bar_03" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
    </LinearLayout>

    <com.game.xxh.view.AutoGamePintuLayout
        android:id="@+id/id_gameview_a"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:padding="5dp" >

        <Button
            android:id="@+id/button1_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="86dp"
            android:text="重    置" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/button1_a"
            android:text="返    回" />
    </com.game.xxh.view.AutoGamePintuLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ad_info_a"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="广告条"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_ad_request_a"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请求" />
    </LinearLayout>

</LinearLayout>