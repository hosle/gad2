<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >
 
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="美女拼图"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnnewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:textSize="20sp"
        android:text="开  始  游  戏" />
    <Button
        android:id="@+id/ranked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnnewGame"
        android:layout_below="@+id/btnnewGame"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:text="游  戏  排  行" />
    <Button
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnnewGame"
        android:layout_below="@+id/ranked"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:text="游  戏  帮  助" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnnewGame"
        android:layout_below="@+id/help"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:text="退  出  游  戏" />

</RelativeLayout>